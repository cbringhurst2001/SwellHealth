<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#7ED957"
    tools:context=".MainActivity">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView5"
        android:layout_width="385dp"
        android:layout_height="74dp"
        android:layout_marginTop="424dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/fat_square1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ADD8E6" /> <!-- Green color -->

        <!-- Fat label -->
        <TextView
            android:id="@+id/fat_label21"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="Fat"
            android:textColor="#ffffff" />


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardVie"
        android:layout_width="385dp"
        android:layout_height="74dp"

        android:textColor="#ffffff"

        android:layout_marginTop="352dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/fat_square"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFB6C1" /> <!-- Green color -->

        <!-- Fat label -->
        <TextView
            android:id="@+id/fat_label"
            android:layout_width="match_parent"
            android:textColor="#ffffff"

            android:layout_height="match_parent"
            android:text="Fat" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardViebw"
        android:layout_width="385dp"
        android:layout_height="74dp"
        android:layout_marginTop="284dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/fat_square2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#ffffff"

            android:background="#DB7093" /> <!-- Green color -->

        <!-- Fat label -->
        <TextView
            android:id="@+id/fat_label2"
            android:layout_marginStart="1dp"

            android:layout_width="383dp"
            android:textColor="#ffffff"

            android:layout_height="68dp"
            android:text="Fat" />

        <!-- Carb label -->

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:background="#ADD8E6"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#FFEFD5"

            android:layout_width="391dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp">


            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pie_chart"
                android:layout_width="232dp"
                android:layout_height="239dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
            <LinearLayout
                android:id="@+id/square_colors_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                tools:ignore="MissingConstraints">
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        android:layout_width="381dp"
        android:layout_height="71dp"

        android:layout_marginTop="492dp"
        android:textColor="#ffffff"

        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-4dp"
        tools:ignore="MissingConstraints">

        <View
            android:id="@+id/fat_square3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#66CCCC " /> <!-- Green color -->


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="24dp"
            android:text="Additional Info"
            android:textColor="#ffffff"
            app:icon="@drawable/ic_baseline_arrow_downward_24"

            android:textStyle="bold">

        </com.google.android.material.button.MaterialButton>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/text_view_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>